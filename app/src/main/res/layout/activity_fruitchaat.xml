<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fruitchaat">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose your favourite Fruit that you want to add in Fruit Chaat -"
        android:layout_marginTop="100dp"
        android:textColor="@color/black"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textStyle="normal"
        android:textSize="24sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/favouritefruit"
        android:layout_margin="10dp"
        android:text="Choose Fruits"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:padding="3dp"
        android:background="@drawable/editlayout"
        android:gravity="center"
        android:layout_marginTop="10dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="20dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:padding="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="4">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Fruit Chaat"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_weight="1.3"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"
                    android:textSize="16sp"
                    android:layout_weight="0.9"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Quantity"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_weight="0.9"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Total"
                    android:textSize="16sp"
                    android:layout_weight="0.9"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="4">

                <TextView
                    android:id="@+id/fruitname"
                    android:layout_width="0dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:padding="2dp"
                    android:text="Fruit Chaat"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black"
                    android:padding="3dp"
                    android:id="@+id/fruitchaatprice"
                    android:background="@color/green"
                    android:textSize="16sp"
                    android:layout_weight="0.9"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:id="@+id/fruitchaatquantity"
                    android:padding="2dp"
                    android:background="@color/green"
                    android:textSize="16sp"
                    android:layout_weight="0.9"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:id="@+id/fruitchaattotal"
                    android:text="0"
                    android:layout_marginLeft="5dp"
                    android:background="@color/green"
                    android:padding="2dp"
                    android:textSize="16sp"
                    android:layout_weight="0.9"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_margin="5dp"
                android:textSize="2sp"
                android:textStyle="bold"
                android:padding="3dp"
                android:background="@color/whitish"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose your Delivery Address !"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:textSize="24sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Choose your hostel"
            android:padding="3dp"
            android:textSize="16sp"
            android:layout_margin="10dp"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hostelspinner"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proceed To Payment"
            android:id="@+id/paymentrequest"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/editlayout"
            android:textColor="@color/green"
            android:padding="5dp"/>
        <ProgressBar
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:id="@+id/progressbarpayment"
            android:visibility="gone"/>
    </FrameLayout>



</LinearLayout>

